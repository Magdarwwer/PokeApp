<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewPokemon"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageViewPokeball"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:layout_alignTop="@id/imageViewPokemon"
        android:layout_alignEnd="@id/imageViewPokemon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="-19dp"
        android:src="@mipmap/pokeball" />

    <TextView
        android:id="@+id/textViewPokemonName"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_below="@id/imageViewPokemon"
        android:layout_marginTop="-34dp"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
