<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="ExtraText">
    <!-- Left pokeball icon -->
    <ImageView
        android:id="@+id/imageViewLeftPokeball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/gamepoke"
        app:layout_constraintTop_toTopOf="@id/textViewPokedex"
        app:layout_constraintBottom_toBottomOf="@id/textViewPokedex"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="8dp" />

    <!-- Scripture POKEDEX -->
    <TextView
        android:id="@+id/textViewPokedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POKEDEX"
        android:textSize="24sp"
        android:textColor="#ebbd34"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Right pokeball icon -->
    <ImageView
        android:id="@+id/imageViewRightPokeball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/gamepoke"
        app:layout_constraintTop_toTopOf="@id/textViewPokedex"
        app:layout_constraintBottom_toBottomOf="@id/textViewPokedex"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="100dp" />

    <!-- Front Image -->
    <ImageView
        android:id="@+id/imageViewFrontDetail"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="140dp"
        android:text="FrontPic"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <!-- Back Image -->
    <ImageView
        android:id="@+id/imageViewBackDetail"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="140dp"
        android:text="BackPic"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/textViewNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="90dp"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- Height -->

    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="148dp"
        android:text="Height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNameDetail" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:text="Weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewHeight" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="75dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWeight" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Types"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewFrontDetail"
        android:layout_marginTop="80dp"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/textViewAbility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Abilities"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textViewType"
        app:layout_constraintTop_toTopOf="@id/textViewType" />

    <TextView
        android:id="@+id/textViewStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textViewAbility"
        app:layout_constraintTop_toTopOf="@id/textViewAbility"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTypes"
        android:layout_width="136dp"
        android:layout_height="248dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewType" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAbilities"
        android:layout_width="137dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAbility" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStats"
        android:layout_width="139dp"
        android:layout_height="253dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStat" />

</androidx.constraintlayout.widget.ConstraintLayout>