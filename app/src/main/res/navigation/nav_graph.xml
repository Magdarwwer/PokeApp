<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_pokedex">

    <fragment
        android:id="@+id/navigation_pokedex"
        android:name="edu.url.salle.magdalena.morag.pokeapp.fragment.PokemonFragment"
        android:label="Pokedex"
        tools:layout="@layout/fragment_pokedex">
        <action
            android:id="@+id/action_navigation_pokedex_to_pokemonDetailFragment"
            app:destination="@id/pokemonDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/pokemonDetailFragment"
        android:name="edu.url.salle.magdalena.morag.pokeapp.fragment.PokemonFragment"
        android:label="pokemon"
        tools:layout="@layout/fragment_pokemon_detail" />
    <fragment
        android:id="@+id/navigation_trainer"
        android:name="edu.url.salle.magdalena.morag.pokeapp.fragment.TrainerFragment"
        android:label="Trainer"
        tools:layout="@layout/fragment_trainer"/>
    <fragment
        android:id="@+id/navigation_store"
        android:name="edu.url.salle.magdalena.morag.pokeapp.fragment.StoreFragment"
        android:label="Store"
        tools:layout="@layout/fragment_store" />
</navigation>
